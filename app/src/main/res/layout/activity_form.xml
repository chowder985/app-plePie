<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_form"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    android:layout_margin="10dp"
    tools:context="com.appliepi.android.appplepie.FormActivity">

    <TextView
        android:id="@+id/schoolNum"
        android:layout_alignParentLeft="true"
        android:text="school number"
        android:layout_width="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/nick_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/schoolNum"
        android:layout_width="wrap_content"
        android:text="nick name"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/phone_number"
        android:layout_below="@id/schoolNum"
        android:text="phoneNumber"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:id="@+id/about_me"
        android:text="자기소개"
        android:layout_below="@id/schoolNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="구체적 내용"
        android:layout_below="@id/about_me"
        android:id="@+id/about_me2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="지원동기"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        android:id="@+id/reason"
        android:layout_below="@id/about_me2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="내용"
        android:layout_below="@id/reason"
        android:id="@+id/reason2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="목표"
        android:layout_below="@id/reason2"
        android:padding="8dp"
        android:id="@+id/goal"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="내용"
        android:layout_below="@id/goal"
        android:id="@+id/goal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="각오"
        android:layout_below="@id/goal2"
        android:id="@+id/determination"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="내용"
        android:layout_below="@id/determination"
        android:id="@+id/determination2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
